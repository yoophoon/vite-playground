  "version": "0.2.0",
  "configurations": [
    {
      "name": "devHMR",
      "request": "launch",
      "runtimeArgs": ["dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/playground/hmr/"
    },
    {
      "name": "devENV",
      "request": "launch",
      "runtimeArgs": ["dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/playground/env/"
    }
  ]
}
